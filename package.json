{
  "name": "bwlauncher",
  "version": "1.2.0",
  "description": "Launcher for Blocksworld",
  "homepage": "https://bwsecondary.ddns.net/bw.php",
  "author": "zenith391",
  "license": "MIT",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write src",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:all": "npm run build && electron-builder"
  },
  "keywords": [
    "launcher",
    "blocksworld",
    "bw2"
  ],
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "tsc": "^2.0.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "extract-zip": "^2.0.1",
    "rpmbuild": "0.0.23",
    "three": "^0.175.0"
  },
  "build": {
    "appId": "io.github.zenith391.bw-launcher",
    "productName": "Blocksworld Launcher",
    "files": [
      "!threejs"
    ],
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Game",
      "icon": "icon/560x560.png"
    },
    "publish": [
      "github"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "exe": "Blocksworld Launcher.exe",
            "iconUrl": "icon.png",
            "setupIcon": "icon.png",
            "name": "Blocksworld Launcher"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
